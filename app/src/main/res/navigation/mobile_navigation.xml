<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_attractions">

    <!-- ðŸ›ï¸ Attractions -->
    <fragment
        android:id="@+id/navigation_attractions"
        android:name="com.kasinadhuni.tourismapp.ui.attractions.AttractionsFragment"
        android:label="Attractions"
        tools:layout="@layout/fragment_attractions" />

    <!-- ðŸ—ºï¸ Map Fragment (with arguments) -->
    <fragment
        android:id="@+id/navigation_map"
        android:name="com.kasinadhuni.tourismapp.ui.dashboard.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="lat"
            app:argType="float" />
        <argument
            android:name="lng"
            app:argType="float" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.kasinadhuni.tourismapp.ui.dashboard.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="lat"
            app:argType="float" />
        <argument
            android:name="lng"
            app:argType="float" />
    </fragment>

    <!-- âœï¸ Reviews -->
    <fragment
        android:id="@+id/navigation_reviews"
        android:name="com.kasinadhuni.tourismapp.ui.reviews.ReviewsFragment"
        android:label="Reviews"
        tools:layout="@layout/fragment_reviews" />

</navigation>